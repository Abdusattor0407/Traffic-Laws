<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_103sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvView"
                android:layout_width="@dimen/_74sdp"
                android:layout_height="@dimen/_69sdp"
                android:layout_marginStart="@dimen/_24sdp"
                android:src="@drawable/image_znak"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sign_name"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Shlagbaumli temir yo'l kesishmasi"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imvView"
                app:layout_constraintTop_toTopOf="@id/imvView" />

            <View
                android:id="@+id/view_delete"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_9sdp"
                android:background="@drawable/shape_change_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/icon_delete"
                app:layout_constraintBottom_toBottomOf="@id/view_delete"
                app:layout_constraintStart_toStartOf="@id/view_delete"
                app:layout_constraintTop_toTopOf="@id/view_delete" />

            <TextView
                android:id="@+id/view_delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O'chirish"
                android:textColor="#5592C0"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/view_delete"
                app:layout_constraintEnd_toEndOf="@id/view_delete"
                app:layout_constraintStart_toEndOf="@id/icon_delete"
                app:layout_constraintTop_toTopOf="@id/view_delete" />

            <View
                android:id="@+id/view_change"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_9sdp"
                android:background="@drawable/shape_change_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_delete" />

            <ImageView
                android:id="@+id/icon_change"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/icon_change"
                app:layout_constraintBottom_toBottomOf="@id/view_change"
                app:layout_constraintStart_toStartOf="@id/view_change"
                app:layout_constraintTop_toTopOf="@id/view_change" />

            <TextView
                android:id="@+id/view_change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O'zgartirish"
                android:textColor="#5592C0"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/view_delete"
                app:layout_constraintEnd_toEndOf="@id/view_delete"
                app:layout_constraintStart_toEndOf="@id/icon_delete"
                app:layout_constraintTop_toTopOf="@id/view_delete" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>